<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mappers.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.higgschain.trust.drs.service.dao.TxRequestDao">
    <!-- Result Map -->
    <resultMap id="baseResultMap" type="com.higgschain.trust.drs.service.dao.po.TxRequestPO">
        <result column="id" property="id"/>
        <result column="tx_id" property="txId"/>
        <result column="policy_id" property="policyId"/>
        <result column="tx_api" property="txApi"/>
        <result column="tx_data" property="txData"/>
        <result column="block_height" property="blockHeight"/>
        <result column="tx_receipt" property="txReceipt"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <!-- tx_request table all fields -->
    <sql id="baseColumnList">
		id,tx_id,policy_id,tx_api,tx_data,block_height,tx_receipt,status,create_time,update_time
	</sql>
    <!-- 查询条件 -->
    <sql id="baseWhereClause">
        where 1=1
        <trim suffixOverrides=",">
            <if test="id != null">
                and id=#{id}
            </if>
            <if test="policyId != null and policyId != ''">
                and policy_id=#{policyId}
            </if>
            <if test="txId != null and txId != ''">
                and tx_id=#{txId}
            </if>
            <if test="txApi != null and txApi != ''">
                and tx_api=#{txApi}
            </if>
            <if test="txData != null">
                and tx_data=#{txData}
            </if>
            <if test="blockHeight != null">
                and block_height=#{blockHeight}
            </if>
            <if test="txReceipt != null">
                and tx_receipt=#{txReceipt}
            </if>
            <if test="status != null and status != ''">
                and status=#{status}
            </if>
            <if test="createTime != null">
                and create_time=#{createTime}
            </if>
            <if test="updateTime != null">
                and update_time=#{updateTime}
            </if>
        </trim>
    </sql>
    <!-- 插入记录 -->
    <insert id="save" parameterType="Object">
		insert into
		tx_request(id,tx_id,policy_id,tx_api,tx_data,block_height,tx_receipt,status,create_time,update_time)
		values(#{id},#{txId},#{policyId},#{txApi},#{txData},#{blockHeight},#{txReceipt},#{status},now(),now())
	</insert>
    <!-- 根据tx_id查询 -->
    <select id="queryByTxId" resultMap="baseResultMap" parameterType="Object">
        select
        <include refid="baseColumnList"/>
        from tx_request where tx_id=#{txId}
    </select>
    <!-- 根据状态 查询列表 -->
    <select id="queryByStatus" resultMap="baseResultMap"
            parameterType="Object">
        select
        <include refid="baseColumnList"/>
        from tx_request
        where
        status=#{status}
        limit #{row},#{count}
    </select>

    <!-- update status-->
    <update id="updateStatus">
		UPDATE `tx_request`
		SET
		`status` = #{to},
		`update_time`= now()
		WHERE
		`tx_id` = #{txId} and status=#{from}
	</update>

    <!-- update status and receipt-->
    <update id="updateStatusAndReceipt">
        UPDATE `tx_request`
        SET
        `status` = #{to},
        `tx_receipt` = #{receipt},
        `update_time`= now()
        WHERE
        `tx_id` = #{txId} and status=#{from}
    </update>
</mapper>
