<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mappers.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.stacs.nav.drs.boot.dao.AppUpgradeHistoryDao">
	<!-- Result Map -->
	<resultMap id="baseResultMap" type="io.stacs.nav.drs.boot.dao.po.AppUpgradeHistoryPO">
		<result column="id" property="id" />
		<result column="name" property="name" />
		<result column="version" property="version" />
		<result column="version_code" property="versionCode" />
		<result column="context_path" property="contextPath" />
		<result column="run_error" property="runError" />
		<result column="file_name" property="fileName" />
		<result column="config_name" property="configName" />
		<result column="icon" property="icon" />
		<result column="author" property="author" />
		<result column="remark" property="remark" />
		<result column="create_time" property="createTime" />
	</resultMap>
	<!-- app_info table all fields -->
	<sql id="baseColumnList">
		id,name,version,version_code,context_path,run_error,file_name,config_name,icon,author,remark,create_time
	</sql>
	<!-- save record -->
	<insert id="save" parameterType="Object">
		insert into
		`app_upgrade_history`(id,name,version,version_code,context_path,run_error,file_name,config_name,icon,author,remark,create_time)
		values(#{id},#{name},#{version},#{versionCode},#{contextPath},#{runError},#{fileName},#{configName},#{icon},#{author},#{remark},now())
	</insert>

	<!-- query by app name -->
	<select id="queryByName" resultMap="baseResultMap">
		SELECT
		<include refid="baseColumnList"/>
		FROM `app_upgrade_history`
		WHERE name=#{name};
	</select>
</mapper>
